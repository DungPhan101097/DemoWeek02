<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dungit.utility.demoweek2.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_start_view_stub_act"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start View Stub Activity"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_start_coodinator_act"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start Coodinator Activity"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_download_file"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Download files with Intent service"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_async_task"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Process file with Async Task"
        android:layout_gravity="center_horizontal"/>
    <Button
        android:id="@+id/btn_fcm_notification"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start FCM notification Activity"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_thread_executor"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Download files with Thread Pool Executor"
        android:layout_gravity="center_horizontal"/>

    <Button
        android:id="@+id/btn_thread_handler"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Download file with Thread Handler"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
